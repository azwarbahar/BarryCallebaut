<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_title_sliding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="25dp"
        android:text="Masukkan nama anda"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title_sliding"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/colorPrimary"
        android:hint="Lengkapi.." />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_below="@id/et_value"
        android:layout_marginHorizontal="16dp"
        android:layout_width="match_parent"
        android:weightSum="2"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="22dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_sliding_batal"
            android:background="@drawable/bg_stroke_primary"
            android:layout_width="match_parent"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginVertical="10dp"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:text="Batal"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_sliding_simpan"
            android:background="@drawable/bg_primary_corner_8"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="8dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginVertical="10dp"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:text="Simpan"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>